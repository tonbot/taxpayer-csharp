@page
@namespace MyFirstCoreApp.Pages
@model IndexModel
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Login Page";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-lg" style="max-width: 400px; width: 90%;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">Taxpayer Portal</h2>
                <p class="text-muted">Welcome back! Please login to your account.</p>
            </div>
            
            <form id="loginUserForm" method="post">
                <div class="form-floating mb-3">
                    <input class="form-control" type="text" id="TaxId" name="TaxId" 
                           asp-for="TaxId" required placeholder="Enter your Tax ID">
                    <label for="TaxId">Tax ID</label>
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input class="form-control" type="password" id="Password" 
                           name="Password" asp-for="Password" required placeholder="Enter your password">
                    <label for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <button onclick="login()" type="button" id="loginUser" 
                        class="btn btn-primary w-100 py-3 mb-3 rounded-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </button>

                <div class="text-center">
                    <a href="#" class="text-decoration-none small">Forgot Password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" asp-append-version="true" src="/js/user.js"></script>
}